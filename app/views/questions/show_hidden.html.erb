<div class="container">
  <h2 class="title-lg mb">Скрытые вопросы</h2>

  <% @questions.each do |question| %>
    <% if question.hidden? %>
      <p class="mb-sm"><%= link_to "Вопрос #{question.id}", question_path(question) %></p>
    <% end %>
  <% end %>

  <p class="mt">
    <%= link_to "Вопросы", questions_path, class: 'button button-main' %>
  </p>
</div>